<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="136dp"
            android:layout_height="200dp"
            tools:src="@drawable/avengers" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movie_title"
        style="@style/Text.TIX.Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="82dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_movie_poster"
        tools:text="Avengers Endgame" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="82dp"
        android:textColor="@color/blue"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_title"
        tools:text="Action" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/star"
        app:layout_constraintStart_toEndOf="@+id/movie_title"
        app:layout_constraintTop_toBottomOf="@+id/cv_movie_poster" />

    <TextView
        android:id="@+id/rating"
        style="@style/Text.TIX.Heading"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        tools:text="9.0"
        android:textColor="@color/darkblue"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/star"
        app:layout_constraintTop_toBottomOf="@+id/cv_movie_poster" />
</androidx.constraintlayout.widget.ConstraintLayout>